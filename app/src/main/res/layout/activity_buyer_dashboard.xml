<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    tools:context=".BuyerDashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_bg"></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="18dp"
        android:id="@+id/name_layout">
        <TextView
            android:id="@+id/buyername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_below="@+id/name_layout"
        android:layout_marginVertical="30dp">
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_column="0"
            android:layout_row="0"
            app:cardCornerRadius="5dp"
            android:id="@+id/buyerLandDetails"
            app:cardBackgroundColor="@color/blueTransparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp">
                <ImageView
                    android:id="@+id/land_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconbg"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_below="@+id/land_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Find By Lands"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="170dp"
            android:layout_height="180dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/buyerCropDetails"
            app:cardBackgroundColor="@color/blueTransparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="35dp">
                <ImageView
                    android:id="@+id/crop_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconbg"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_below="@+id/crop_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Find By Crops"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_column="0"
            android:layout_row="1"
            app:cardCornerRadius="5dp"
            android:id="@+id/buyerRequests"
            app:cardBackgroundColor="@color/blueTransparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="35dp">
                <ImageView
                    android:id="@+id/request_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconbg"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_below="@+id/request_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="My Requests"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/buyerAgreements"
            app:cardBackgroundColor="@color/blueTransparent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="35dp">
                <ImageView
                    android:id="@+id/aggrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconbg"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:paddingTop="10dp"
                    android:layout_below="@+id/aggrement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Agreements"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>